<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gatunki"
    android:background="#101110">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/or1"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep1">
            </ImageView>
            <ImageView
                android:id="@+id/or2"

                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep2">
            </ImageView>
            <ImageView
                android:id="@+id/or3"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep3">
            </ImageView>
            <ImageView
                android:id="@+id/or4"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep4">
            </ImageView>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep5">
            </ImageView>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/orlosep6">
            </ImageView>

        </LinearLayout>
    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>